generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STUDENT
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  DROPPED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole  @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  loginAttempts Int       @default(0)
  lockedUntil   DateTime?
  
  profile       Profile?
  enrollments   Enrollment[]
  auditLogs     AuditLog[]
  attendance    Attendance[]

  @@index([email])
  @@index([role])
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  studentId       String?  @unique
  phone           String?
  address         String?
  dateOfBirth     DateTime?
  profileImage    String?
  bio             String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Course {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String?
  credits     Int      @default(3)
  capacity    Int      @default(30)
  instructor  String?
  schedule    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  enrollments     Enrollment[]
  announcements   Announcement[]
  attendance      Attendance[]
  courseMaterials CourseMaterial[]

  @@index([code])
  @@index([isActive])
}

model Enrollment {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId  String
  course    Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  status    EnrollmentStatus @default(ACTIVE)
  grade     String?
  enrolledAt DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  
  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String
  entity    String
  entityId  String?
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  priority  String   @default("NORMAL")
  isActive  Boolean  @default(true)
  courseId  String?
  course    Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([courseId])
  @@index([createdAt])
}

model Attendance {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  status    String   @default("PRESENT")
  notes     String?
  markedBy  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId, date])
  @@index([userId])
  @@index([courseId])
  @@index([date])
  @@index([status])
}

model CourseMaterial {
  id          String   @id @default(cuid())
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title       String
  description String?
  fileUrl     String
  fileName    String
  fileType    String
  fileSize    Int
  week        Int?
  module      String?
  uploadedBy  String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([courseId])
  @@index([week])
  @@index([isActive])
}
